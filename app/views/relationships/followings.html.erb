
    
      <h2>Follow Users</h2>
      <tbody>
<% if @users.exists? %>
  <% @users.each do |user| %>
      <table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
